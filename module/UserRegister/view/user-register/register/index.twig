{% import 'user-register/macro/form.twig' as form %}
{% block container %}
<h2>顧客登録</h2>

<form action="/register/validate" method="POST">
<table>
<tr>
    <td>社員番号<span style="font-size: 10px; color: #ff0000;">[必須]</span></td>
    <td>
        <input type="text" name="number" value="{{ inputs.number }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.number)}}</font>
    </td>
</tr>
<tr>
    <td>名前<span style="font-size: 10px; color: #ff0000;">[必須]</span></td>
    <td>姓&nbsp;<input type="text" name="family_name" value="{{ inputs.family_name }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.family_name)}}</font>
        名&nbsp;<input type="text" name="last_name" value="{{ inputs.last_name }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.last_name)}}</font>
    </td>
</tr>
<tr>
    <td>名前（カナ）<span style="font-size: 10px; color: #ff0000;">[必須]</span></td>
    <td>セイ&nbsp;<input type="text" name="family_name_kana" value="{{ inputs.family_name_kana }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.family_name_kana)}}</font>
        メイ&nbsp;<input type="text" name="last_name_kana" value="{{ inputs.last_name_kana }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.last_name_kana)}}</font>
    </td>
</tr>
<tr>
    <td>電話番号<span style="font-size: 10px; color: #ff0000;">[必須]※どちらか必須</span></td>
    <td><input type="text" name="phone_number" value="{{ inputs.phone_number }}" size="20" maxlength="10" />
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.phone_number)}}</font>
    </td>
</tr>
<tr>
    <td>携帯電話番号<span style="font-size: 10px; color: #ff0000;">[必須]※どちらか必須</span></td>
    <td><input type="text" name="mobile_phone_number" value="{{ inputs.mobile_phone_number }}" size="20" maxlength="11" />
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.mobile_phone_number)}}</font>
    </td>
</tr>
<tr>
    <td>郵便番号<span style="font-size: 10px; color: #ff0000;">[必須]</span></td>
    <td><input type="text" name="post_code1" value="{{ inputs.post_code1 }}" size="3"/>-
        <input type="text" name="post_code2" value="{{ inputs.post_code2 }}" size="4"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.post_code1)}}</font>
        {% if errMsg.post_code1 is empty %}
            <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.post_code2)}}</font>
        {% endif %}
    </td>
</tr>
<tr>
    <td>住所</td>
    <td>
        都道府県<span style="font-size: 10px; color: #ff0000;">[必須]</span>
        <select name="prefecture">
            <option value="">選択してください</option>
        {% for prefecture in prefectureList %}
            <option value="{{ prefecture.id }}"{% if inputs.prefecture == prefecture.id %} selected{% endif %}>{{ prefecture.id }}:{{ prefecture.name }}</option>
        {% endfor %}
        </select>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.prefecture)}}</font>
        
        <br />
        市区町村<span style="font-size: 10px; color: #ff0000;">[必須]</span>
        <input type="text" name="address_city" value="{{ inputs.address_city }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.address_city)}}</font>
        <br />
        その他<input type="text" name="address_other" value="{{ inputs.address_other }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.address_other)}}</font>
    </td>
</tr>
<tr>
    <td>所属部署<span style="font-size: 10px; color: #ff0000;">[必須]</span></td>
    <td><input type="text" name="section" value="{{ inputs.section }}"/>
        <font style="color: #ff0000">{{ form.showErrorMessage(errMsg.section)}}</font>
    </td>
</tr>
</table>
<input type="submit" value="確認">
</form>

{% endblock %}

